<h1 class="mb-1 restaurant-show-title ">編輯餐廳</h1>
<div class="container" style="width:800px">
  <form action="/restaurants/{{restaurants._id}}" method="PUT">
    <div class="mb-3">
      <label for="name"><i class="fa-solid fa-utensils text-solid m-1"></i>店名:</label>
      <input type="text" value="{{restaurants.name}}" class="form-control" id="name" name="name" required />
    </div>
    <div class="mb-3">
      <label for="name_en"><i class="fa-solid fa-t text-solid m-1"></i>英文店名:</label>
      <input type="text" value="{{restaurants.name_en}}" class="form-control" id="name_en" name="name_en" required />
    </div>
    <div class="mb-3">
      <label for="category"><i class="fa-solid fa-filter text-solid m-1"></i>分類:</label>
      <input type="text" value="{{restaurants.category}}" class="form-control" id="category" name="category" list="options"
        required />
      <datalist name="category" id="options">
        <option>日式餐廳</option>
        <option>義式餐廳</option>
        <option>中東料理</option>
        <option>美式</option>
        <option>咖啡</option>
        <option>酒吧</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image"><i class="fa-solid fa-image text-solid m-1"></i>圖片連結:</label>
      <input type="url" class="form-control" value="{{restaurants.image}}" id="image" name="image" required />
    </div>
    <div class="mb-3">
      <label for="location"><i class="fa-solid fa-map-pin text-solid m-1"></i>地址:</label>
      <input type="text" value="{{restaurants.location}}" class="form-control" id="location" name="location" required />
    </div>
    <div class="mb-3">
      <label for="phone"><i class="fa-solid fa-phone text-solid m-1"></i>電話:</label>
      <input type="tel" value="{{restaurants.phone}}" class="form-control" id="phone" name="phone" required />
    </div>
    <div class="mb-3">
      <label for="google_map"><i class="fa-solid fa-map-location-dot text-solid m-1"></i>Google地圖:</label>
      <input type="url" class="form-control" value="{{restaurants.google_map}}" id="google_map" name="google_map" required />
    </div>
    <div class="mb-3">
      <label for="rating"><i class="fa-solid fa-star text-solid m-1"></i>評分:</label>
      <input type="number" value="{{restaurants.rating}}" min="0" max="5" step="0.1" class="form-control" id="rating" name="rating"
        required />
    </div>
    <div class="mb-3">
      <label for="description"><i class="fa-solid fa-comment text-solid m-1"></i>評論:</label>
      <textarea class="form-control" name="description" id="description" cols="10" rows="3"
        required>{{restaurants.description}}</textarea>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-danger m-1">修改送出</button>
      <a href="/restaurants/{{restaurants._id}}"><button type="button" class="btn btn-primary m-1">返回</button></a>
    </div>
  </form>
</div>